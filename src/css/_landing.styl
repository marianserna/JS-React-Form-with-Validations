.container, #signup-wrapper
  box-sizing border-box
  width 100vw
  min-height 100vh
  background-color #212121

.inner-container
  width 35vw
  margin 0 auto
  position relative
  display flex
  justify-content center
  flex-wrap wrap

h2
  display block
  margin 0px
  padding 70px

.button
  display block
  width 75%
  text-decoration none
  text-align center
  color #fff
  margin 0px auto 15px auto
  border 2px solid #fff
  border-radius 50px
  padding-top: 5px
  background-color inherit

  &:hover
    background-color #AB47BC
    color #fff

@media (max-width: 769px)
  .inner-container
    width 100%
